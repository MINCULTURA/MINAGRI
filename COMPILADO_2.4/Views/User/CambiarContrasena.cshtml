@{
    ViewBag.Title = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AppMC.Models.UserModels

<h2>Cambiar Contraseña</h2>
<input type="hidden" id="txtcodusu" class="form-control" value="@ViewBag.NCODIGOUSUARIO" />
<input type="hidden" id="txtperfil" class="form-control" value="@ViewBag.NIDPERFIL" />
<br />
<div class="row">
    <div class="col-lg-3">
        <label class="control-label">CONTRASEÑA ANTERIOR:</label>
        <input type="password" id="txtPasswordAnt" class="form-control" style="font-size:14pt" maxlength="25" />
    </div>
    <div class="col-lg-9">
        &nbsp;
    </div>
</div><br/>
<div class="row">   
    <div class="col-lg-3">
        <label class="control-label">NUEVA CONTRASEÑA:</label>
        <input type="password" id="txtPasswordNew" class="form-control" style="font-size:14pt" maxlength="25" />
    </div>
    <div class="col-lg-9">
        &nbsp;
    </div>
</div><br />
<div class="row">    
    <div class="col-lg-3">
        <label class="control-label">CONFIRMAR CONTRASEÑA:</label>
        <input type="password" id="txtPasswordNew2" class="form-control" style="font-size:14pt" maxlength="25" /><br /><br />
    </div>
    <div class="col-lg-9">
        &nbsp;
    </div>
</div><br />
<div class="row">
    <div class="col-md-3">
        <p><button type="button" class="btn btn-red" id="btn_guardar" onclick="CambiarContrasena()"> Cambiar <i class="fa fa-save"></i> </button></p>

    </div>
    <div class="col-md-9">
        &nbsp;
    </div>
</div>

<script src="@Url.Content("~/js/Vistas/User/CambiarContrasena.js")" type="text/javascript"></script>