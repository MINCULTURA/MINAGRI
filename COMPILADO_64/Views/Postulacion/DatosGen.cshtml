@{
    ViewBag.Title = "Datos Personales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AppMC.Models.PostulacionModels.DatosGen
<div class="row">
    <div class="col-lg-5">
        <h2>Datos Personales</h2>
    </div>
    <div class="col-lg-7" style="text-align: right; padding-top: 20px">
        <button type="button" class="btn btn-green" id="btn_guardar"> Guardar <i class="fa fa-save"></i> </button>
    </div>
</div>
<input type="hidden" id="txtcodusu" class="form-control" value="@ViewBag.NCODIGOUSUARIO" />
<input type="hidden" id="txtperfil" class="form-control" value="@ViewBag.NIDPERFIL" />
<input type="hidden" id="nn" class="form-control" value="@ViewBag.NN" />
<input type="hidden" id="hddRUTADOC" value="@ViewBag.rutaDOC" />
<input type="hidden" id="hddMAX_SIZE" value="@ViewBag.max_size" />

<input type="hidden" id="FLG_UPLOAD" value="S" />
<input type="hidden" id="SRUTADOC" />
<input type="hidden" id="SRUTADOC_NAC" />
<input type="hidden" id="SRUTADOC_BRE" />
<div class="row">
    <div class="col-lg-3">
        <label class="control-label">NOMBRES:</label>
        <input type="text" id="txtnombre" class="form-control letras" disabled/>
    </div>
    <div class="col-lg-2">
        <label class="control-label">APELLIDO PATERNO:</label>
        <input type="text" id="txtapaterno" class="form-control letras" disabled/>
    </div>
    <div class="col-lg-2">
        <label class="control-label">APELLIDO MATERNO:</label>
        <input type="text" id="txtamaterno" class="form-control letras" disabled/><br />
    </div>
    <div class="col-lg-2">
        <label class="control-label">SEXO:</label>
        <select class="form-control" id="ddl_sexo">
            <option value="F">MUJER</option>
            <option value="M">HOMBRE</option>
        </select>
    </div>
    <div class="col-lg-1">
        <label class="control-label">EDAD:</label>
        <input type="text" id="txtedad" class="form-control solo-numero" maxlength="2" style="text-align:center" disabled />
    </div>
    <div class="col-lg-2">
        <label class="control-label">ESTADO CIVIL:</label>
        <select class="form-control" id="ddl_estcivil"></select><br />
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h5 style="text-decoration:underline"><b>DATOS DE NACIMIENTO</b></h5>
    </div>
</div>
<div class="row">
    <div class="col-lg-2">
        <label class="control-label">DEPARTAMENTO:</label>
        <select class="form-control" id="ddl_departamenton"></select>
    </div>
    <div class="col-lg-2">
        <label class="control-label">PROVINCIA:</label>
        <select class="form-control" id="ddl_provincian"></select>
    </div>
    <div class="col-lg-2">
        <label class="control-label">DISTRITO:</label>
        <select class="form-control" id="ddl_distriton"></select>
    </div>
    <div class="col-lg-2">
        <label class="control-label">FECHA DE NAC.:</label>
        <div id="dtm_fechanac" class="input-append">
            <input data-format="dd/MM/yyyy" type="text" placeholder="DD/MM/AAAA" id="txtfechanac" style="width:80%;text-align:center" >
            <span class="add-on">
                <i data-time-icon="icon-time" data-date-icon="clip-calendar-3">
                </i><br /><br />
            </span>
        </div>
    </div>
    </div>
<div class="row" style="display:none">
    <div class="col-lg-4">
        <label class="control-label">PAÍS NACIONALIDAD:</label>
        <input type="text" id="txtPais" class="form-control mayus" />
    </div>
    <div class="col-lg-8">
        <label class="control-label">DOCUMENTO SUSTENTO DE PERMISO LABORAL</label>
        <div id="divSelArchivo_SPL">
            <input type="file" name="UploadFile_BRE" id="txtUploadFile_SPL" />
        </div>
        <div id="divVerArchivo_SPL" style="display:none"></div>
    </div>
</div>   
<div class="row">
    <div class="col-lg-12">
        <h5 style="text-decoration:underline"><b>DOCUMENTOS</b></h5>
    </div>
</div>
<div class="row">
    <div class="col-lg-1">
        <label class="control-label">Tipo Doc.:</label>
        <select class="form-control" id="ddl_tipodoc">
            <option value="1">DNI</option>
            <option value="2">PAS</option>
            <option value="3">CE</option>
            <option value="4">OTRO</option>
            <option value="5">PTP</option>
        </select>
    </div>
    <div class="col-lg-2">
        <label class="control-label">N° DOC:</label>
        <input type="text" id="txtdni" class="form-control solo-numero" disabled/>
    </div>
    <div class="col-lg-2">
        <label class="control-label">N° RUC:</label>
        <input type="text" id="txtruc" class="form-control solo-numero" maxlength="11" />
    </div>
    <div class="col-lg-2" style="display:none">
        <label class="control-label">CLASE-CAT. BREVETE:</label>
        <select tabindex="-1" id="txtcatbrevete" class="form-control"></select>
        <br />
    </div>
    <div class="col-lg-2" style="display:none">
        <label class="control-label">N° BREVETE:</label>
        <input type="text" id="txtbrevete" class="form-control letras-numeros mayus" maxlength="9" />
    </div>
    <div class="col-lg-2" style="display:none">
        <label class="control-label">DOCUMENTO SUSTENTO</label>
        <div id="divSelArchivo_BRE">
            <input type="file" name="UploadFile_BRE" id="txtUploadFile_BRE" />
        </div>
        <div id="divVerArchivo_BRE" style="display:none"></div>
    </div>
</div>  
<div class="row">
    <div class="col-lg-12">
        <h5 style="text-decoration:underline"><b>DOMICILIO ACTUAL</b></h5>
    </div>
</div>
<div class="row">
    <div class="col-lg-2">
        <label class="control-label">DEPARTAMENTO:</label>
        <select class="form-control" id="ddl_departamentod"></select>
    </div>
    <div class="col-lg-2">
        <label class="control-label">PROVINCIA:</label>
        <select class="form-control" id="ddl_provinciad"></select>
    </div>
    <div class="col-lg-2">
        <label class="control-label">DISTRITO:</label>
        <select class="form-control" id="ddl_distritod"></select><br />
    </div>
    <div class="col-lg-4">
        <label class="control-label">DIRECCIÓN:</label>
        <input type="text" id="txtdireccion" class="form-control" />
    </div>
    <div class="col-lg-2">
        <label class="control-label">N°/LT./MZ.:</label>
        <input type="text" id="txtlotedir" class="form-control" />
    </div>
</div> 
<div class="row">
    <div class="col-lg-12">
        <h5 style="text-decoration:underline"><b>TELÉFONOS/CORREO ELECTRÓNICO</b></h5>
    </div>
</div> 
<div class="row">
    <div class="col-lg-2">
        <label class="control-label">FIJO:</label>
        <input type="text" id="txtfijo" class="form-control solo-numero" maxlength="15" />
    </div>
    <div class="col-lg-2">
        <label class="control-label">CELULAR:</label>
        <input type="text" id="txtcelular" class="form-control solo-numero" maxlength="17"/>
    </div>
    <div class="col-lg-4">
        <label class="control-label">DIRECCIÓN DE CORREO ELECTRÓNICO:</label>
        <input type="text" id="txtcorreo" class="form-control" /><br /><br />
    </div>
    <div class="col-lg-4">
        &nbsp;
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h5 style="text-decoration:underline"><b>CONTACTO DE EMERGENCIA</b></h5>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
        <label class="control-label">NOMBRES:</label>
        <input type="text" id="txtnombres_c" class="form-control" />
    </div>
    <div class="col-lg-3">
        <label class="control-label">TELÉFONOS:</label>
        <input type="text" id="txttelefonos_c" class="form-control solo-numero" maxlength="17" />
    </div>
    <div class="col-lg-3">
        <label class="control-label">PARENTESCO:</label>
        <input type="text" id="txtparentesco" class="form-control" /><br /><br />
    </div>
</div>

<script src="@Url.Content("~/js/Vistas/Postulacion/DatosGen.js")" type="text/javascript"></script>